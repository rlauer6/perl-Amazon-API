[InputOutput::RequireCheckedSyscalls]
functions = :defaults
exclude_functions = print

[ControlStructures::ProhibitPostfixControls]
flowcontrol=carp cluck confess croak die exit goto warn LOGCROAK LOGCLUCK LOGCARP LOGCONFESS LOGDIE LOGEXIT LOGWARN

[ValuesAndExpressions::ProhibitConstantPragma]
[Documentation::RequirePodSections]
lib_sections    = NAME | SYNOPSIS | DESCRIPTION | METHODS AND SUBROUTINES | AUTHOR
script_sections = NAME | SYNOPSIS | DESCRIPTION | AUTHOR
